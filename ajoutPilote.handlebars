<h1>Ajouter un pilote</h1>

<form action="/piloteAjoute" method="post">
  <label>Prénom</label><input type="text" name="pilprenom"><br />
  <label>Nom</label><input type="text" name="pilnom"><br />
  <label>Date de naissance</label><input type="date" name="pildatenais"><br />
  <label>Nationalité</label>
    <select name="paynum">
      {{#each listeNationalite}}
      <option value="{{this.paynum}}">{{this.paynom}}</option>
      {{/each}}
  </select><br />
  <label>Ecurie</label>
    <select name="ecunum">
      {{#each listeEcurie}}
      <option value="{{this.ecunum}}">{{this.ecunom}}</option>
      {{/each}}
  </select><br />
  <label>Points</label><input type="text" name="pilpoints"> pts<br />
  <label>Poids</label><input type="text" name="pilpoids"> kg<br />
  <label>Taille</label><input type="text" name="piltaille"> cm<br />
  <label>Description</label><input type="textarea" name="piltexte"><br />
  <input type="submit" value="ajouter">
</form>
