<h1 class="center">Modifier un circuit</h1>
{{#each listeInfoCircuitSelect}}
  <form action="/circuitModifie/{{this.cirnum}}" method="post">

      <label>Nom</label><input type="text" name="cirnom" value="{{this.cirnom}}" required><br /><br />
      <label>Longueur</label><input type="text" name="cirlongueur" size="5" value="{{this.cirlongueur}}" required> m<br /><br />
      <label>Pays</label>

      <select name="paynum">
{{#each ../listePaysMemeQueCircuitSelect}}
  {{#if this.estmeme}}
    <option value="{{this.paynum}}" selected>{{this.paynom}}</option>
  {{else}}
    <option value="{{this.paynum}}">{{this.paynom}}</option>
  {{/if}}
{{/each}}
      </select><br /><br />
      <label>Nombre de spectateurs</label><input type="text" name="cirnbspectateurs" size="10" value="{{this.cirnbspectateurs}}" required> personnes<br /><br />
      <label>Description</label><textarea name="cirtext" rows="10" cols="100" required>{{this.cirtext}}</textarea><br /><br />

    <div class="center"><input type="submit" value="Modifier"></div>
  </form>
{{/each}}
