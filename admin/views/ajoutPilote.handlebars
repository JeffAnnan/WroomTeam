<h1 class="center">Ajouter un pilote</h1>

<form action="/piloteAjoute" enctype="multipart/form-data" method="post">
  <label>Prénom</label><input type="text" name="pilprenom" required><br /><br />
  <label>Nom</label><input type="text" name="pilnom" required><br /><br />
  <label>Date de naissance</label><input type="date" name="pildatenais" required><br /><br />

  <label>Nationalité</label>
    <select name="paynum">
      {{#each listeNationalite}}
      <option value="{{this.paynum}}">{{this.paynat}}</option>
      {{/each}}
  </select><br /><br />
  <label>Ecurie</label>
    <select name="ecunum">
      {{#each listeEcurie}}
      <option value="{{this.ecunum}}">{{this.ecunom}}</option>
      {{/each}}
  </select><br /><br />
  <label>Points</label><input type="text" size="10" name="pilpoints" required> pts<br /><br />
  <label>Poids</label><input type="text" size="5" name="pilpoids" required> kg<br /><br />
  <label>Taille</label><input type="text" size="5" name="piltaille" required> cm<br /><br />
  <label>Image</label><input type="file" name="phoadresse" required><br /><br />
  <label>Description</label><textarea  name="piltexte"  rows="10" cols="100" required></textarea><br /><br />
  <div class="center"><input type="submit" value="Ajouter"></div>

</form>
